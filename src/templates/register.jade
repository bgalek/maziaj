extends layout
block menu

block content
    .container
        .row
            .col-xs-12.col-sm-8.col-md-6.col-sm-offset-2.col-md-offset-3
                form(role='form', method='POST')
                    h2
                        | Rejestracja
                        small It's free and always will be.
                    hr.colorgraph
                    .row
                        .col-xs-12.col-sm-12.col-md-12
                            .form-group
                                input#username.form-control.input-lg(type='text', name='username', placeholder='username', tabindex='1')
                    .form-group
                        input#display_name.form-control.input-lg(type='text', name='display_name', placeholder='Display Name', tabindex='2')
                    .form-group
                        input#email.form-control.input-lg(type='email', name='email', placeholder='Email Address', tabindex='3')
                    .row
                        .col-xs-12.col-sm-6.col-md-6
                            .form-group
                                input#password.form-control.input-lg(type='password', name='password', placeholder='Password', tabindex='4')
                        .col-xs-12.col-sm-6.col-md-6
                            .form-group
                                input#password_confirmation.form-control.input-lg(type='password', placeholder='Confirm Password', tabindex='5')
                    hr.colorgraph
                    .row
                        .col-xs-12.col-md-6
                        .col-xs-12.col-md-6
                            input.btn.btn-primary.btn-block.btn-lg(type='submit', value='Register', tabindex='6')

