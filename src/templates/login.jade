extends layout
block menu

block content
    .container
        .row
            .col-sm-6.col-md-4.col-md-offset-4
                h1.text-center.login-title Sign in to continue to maziaj
                .account-wall
                    img.profile-img(src="images/photo.png", alt="User photo")
                    form.form-signin(action="/login", method="POST")
                        input.form-control(type="text", name="username", placeholder="Email", required="required", autofocus="autofocus")
                        input.form-control(type="password", name="password",  placeholder="Password", required="required")
                        button.btn.btn-lg.btn-primary.btn-block(type="submit")
                            | Zaloguj siÄ™
                        a.btn.btn-lg.btn-primary.btn-block(href="/register")
                            | Rejestracja
                        label.checkbox.pull-left
                            input(type="checkbox", value="remember-me")
                            | Remember me
                        a.pull-right.need-help(href="#") Need help?
                        span.clearfix
                p
                    a.btn-auth.btn-facebook(href="login/auth/facebook") Sign in with &nbsp;
                        b facebook

                a.btn-auth.btn-google(href="login/auth/google") Sign in with &nbsp;
                    b google

