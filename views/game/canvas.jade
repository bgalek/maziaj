        input(type="range", min="3", max="50", ng-model="strokeWidth")
    div(style="background-color:#eee; width:500px; height:300px; display:block; margin: 0 auto;")
        canvas#canvas(width="500px", height="300px", stroke-color="strokeColor", stroke-width="strokeWidth", ng-model="gameCanvas")
