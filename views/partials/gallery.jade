.container
    .row
        .col-lg-12
            h1.page-header=title
                small=subtitle
                pagination.pull-right(style='margin: 0px;',data-ng-if="chains.list.length > 0", total-items='chains.totalItems', ng-model='chains.currentPage', ng-change='chains.pageChanged()')
    .row
        .col-md-6.portfolio-item(data-ng-repeat="chain in chains.list")
            article.doodle
                a(href='#/chain/{{chain._id}}')
                    div.doodle-text(data-ng-show="chain.text.length>0")
                        | {{chain.text}}
                    img.doodle-image.img-responsive(data-ng-show="chain.image.length>0", data-ng-src='{{chain.image}}', alt='')
